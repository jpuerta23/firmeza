@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i class="bi bi-shop me-3"></i>Firmeza Store
                    </h1>
                    <p class="hero-subtitle">Sistema de Gestión Administrativa</p>
                    <p class="hero-description">
                        Plataforma completa para administrar tu negocio. Gestiona productos, clientes y ventas desde un solo lugar.
                    </p>
                    <div class="hero-buttons">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="/Admin" class="btn btn-hero-primary">
                                <i class="bi bi-speedometer2 me-2"></i>Ir al Dashboard
                            </a>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" class="btn btn-hero-primary">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                            </a>
                            <a href="/Identity/Account/Register" class="btn btn-hero-secondary">
                                <i class="bi bi-person-plus me-2"></i>Registrarse
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-illustration">
                    <div class="illustration-card">
                        <i class="bi bi-graph-up-arrow"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Características Principales</h2>
            <p class="section-subtitle">Todo lo que necesitas para gestionar tu negocio</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon bg-primary">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <h3 class="feature-title">Gestión de Productos</h3>
                    <p class="feature-description">
                        Administra tu inventario, precios y categorías de manera eficiente. Importa productos desde Excel.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon bg-success">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="feature-title">Control de Clientes</h3>
                    <p class="feature-description">
                        Mantén un registro completo de tus clientes con toda su información de contacto.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon bg-warning">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <h3 class="feature-title">Registro de Ventas</h3>
                    <p class="feature-description">
                        Lleva el control de todas tus ventas y genera reportes en PDF de forma automática.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <div class="container">
        <div class="cta-card">
            <h2 class="cta-title">¿Listo para empezar?</h2>
            <p class="cta-description">Comienza a gestionar tu negocio de manera profesional</p>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a href="/Identity/Account/Register" class="btn btn-cta">
                    <i class="bi bi-rocket-takeoff me-2"></i>Crear Cuenta Ahora
                </a>
            }
        </div>
    </div>
</div>