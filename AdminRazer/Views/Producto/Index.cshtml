@model IEnumerable<AdminRazer.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Productos</h1>
    <a asp-action="Create" class="btn btn-primary btn-modern shadow-sm"><i class="bi bi-plus-lg"></i> Crear Producto</a>
</div>

<!-- Mensajes de Ã©xito o error -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card card-modern">
    <div class="card-header-modern d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Productos</h6>
        
        <!-- Formulario de carga de Excel -->
        <form asp-action="CargarExcel" method="post" enctype="multipart/form-data" class="d-flex align-items-center">
            <div class="input-group input-group-sm">
                <input type="file" name="archivoExcel" class="form-control form-control-modern" accept=".xlsx,.xls" required />
                <button type="submit" class="btn btn-success btn-modern"><i class="bi bi-file-earmark-spreadsheet"></i> Subir Excel</button>
            </div>
        </form>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive table-modern-container">
            <table class="table table-modern table-hover align-middle">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.Stock)</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-dark">@item.Nombre</td>
                                <td><span class="badge bg-light text-dark border">@item.Categoria</span></td>
                                <td class="text-success fw-bold">@item.Precio.ToString("C")</td>
                                <td>
                                    @if(item.Stock < 10) {
                                        <span class="text-danger fw-bold">@item.Stock (Bajo)</span>
                                    } else {
                                        <span class="text-dark">@item.Stock</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info btn-modern text-white" title="Detalles"><i class="bi bi-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger btn-modern" title="Eliminar"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">
                                <i class="bi bi-box-seam display-4 d-block mb-3"></i>
                                No hay productos registrados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
