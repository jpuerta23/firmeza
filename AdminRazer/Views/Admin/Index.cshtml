@model AdminRazer.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Panel Administrativo";
}

<!-- Enlazar CSS del dashboard desde wwwroot/css -->
<link rel="stylesheet" href="/css/admin-dashboard.css" />

<div class="admin-header">
    <div class="brand">
        <div class="logo" aria-hidden="true">F</div>
        <div>
            <h2 class="mb-0">Panel Administrativo</h2>
            <p class="small-muted mb-0">Bienvenido — gestionar Productos, Clientes y Ventas</p>
        </div>
    </div>

    <div class="header-actions">
        <div class="kpi">
            <span class="value">@DateTime.Now.ToString("dd MMM yyyy")</span>
            <span class="label">Última sesión</span>
        </div>

        <!-- Botón de privacidad: si no existe ruta, redirige a Home/Privacy o a # -->
        <a asp-controller="Home" asp-action="Privacy" class="btn btn-privacy ms-2">Privacy</a>

        <!-- Botón de ayuda/soporte (solo visual) -->
        <a href="#" class="btn btn-outline-secondary ms-2">Soporte</a>
    </div>
</div>

<!-- AI Insight Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card card-modern border-0 shadow-sm" style="background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); color: white;">
            <div class="card-body p-4">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-robot" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h4 class="card-title mb-1">Resumen del Día (AI Insight)</h4>
                        <p class="card-text fs-5">
                            @Model.AiInsightMessage
                        </p>
                        <small class="text-white-50">Datos en tiempo real</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <a href="/Producto" class="text-decoration-none">
            <div class="card card-modern h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-3">
                        <i class="bi bi-box-seam text-primary-custom" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title text-dark">Productos</h4>
                    <p class="card-text text-muted">Gestionar inventario, precios y stock.</p>
                    <button class="btn btn-primary btn-modern mt-3">Ir a Productos</button>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a href="/Clientes" class="text-decoration-none">
            <div class="card card-modern h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-3">
                        <i class="bi bi-people text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title text-dark">Clientes</h4>
                    <p class="card-text text-muted">Administrar base de datos de clientes.</p>
                    <button class="btn btn-success btn-modern mt-3">Ir a Clientes</button>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a href="/Ventas" class="text-decoration-none">
            <div class="card card-modern h-100">
                <div class="card-body text-center p-5">
                    <div class="mb-3">
                        <i class="bi bi-receipt text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title text-dark">Ventas</h4>
                    <p class="card-text text-muted">Registrar ventas y ver reportes.</p>
                    <button class="btn btn-warning btn-modern mt-3 text-white">Ir a Ventas</button>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Pequeño pie con copyright y enlace de privacidad -->
<footer class="mt-4 text-muted small">
    <div class="d-flex justify-content-between align-items-center">
        <div>© @DateTime.Now.Year Firmeza. Todos los derechos reservados.</div>
        <div>
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </div>
</footer>
