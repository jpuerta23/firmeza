@{
    ViewData["Title"] = "Panel Administrativo";
}

<!-- Enlazar CSS del dashboard desde wwwroot/css -->
<link rel="stylesheet" href="/css/admin-dashboard.css" />

<div class="admin-header">
    <div class="brand">
        <div class="logo" aria-hidden="true">F</div>
        <div>
            <h2 class="mb-0">Panel Administrativo</h2>
            <p class="small-muted mb-0">Bienvenido — gestionar Productos, Clientes y Ventas</p>
        </div>
    </div>

    <div class="header-actions">
        <div class="kpi">
            <span class="value">@DateTime.Now.ToString("dd MMM yyyy")</span>
            <span class="label">Última sesión</span>
        </div>

        <!-- Botón de privacidad: si no existe ruta, redirige a Home/Privacy o a # -->
        <a asp-controller="Home" asp-action="Privacy" class="btn btn-privacy ms-2">Privacy</a>

        <!-- Botón de ayuda/soporte (solo visual) -->
        <a href="#" class="btn btn-outline-secondary ms-2">Soporte</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <a href="/Producto" class="text-decoration-none">
            <div class="card card-cta p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-wrap">
                        <i class="bi bi-box-seam" style="font-size:1.5rem;color:var(--brand)"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Gestionar Productos</h5>
                        <p class="small-muted mb-0">Agregar o cargar Productos, editar o eliminar productos</p>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary btn-modern">Ir a Productos</button>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a href="/Cliente" class="text-decoration-none">
            <div class="card card-cta p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-wrap">
                        <i class="bi bi-people" style="font-size:1.5rem; color:var(--accent)"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Gestionar Clientes</h5>
                        <p class="small-muted mb-0">Ver y administrar información de clientes</p>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-success btn-modern">Ir a Clientes</button>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a href="/Venta" class="text-decoration-none">
            <div class="card card-cta p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-wrap">
                        <i class="bi bi-receipt" style="font-size:1.5rem; color:#f6ad55"></i>
                    </div>
                    <div>
                        <h5 class="mb-1">Registrar Ventas</h5>
                        <p class="small-muted mb-0"> Descargar ventas como pdf y administrar detalles</p>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-warning btn-modern">Ir a Ventas</button>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Pequeño pie con copyright y enlace de privacidad -->
<footer class="mt-4 text-muted small">
    <div class="d-flex justify-content-between align-items-center">
        <div>© @DateTime.Now.Year Firmeza. Todos los derechos reservados.</div>
        <div>
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </div>
</footer>
