@model AdminRazer.ViewModels.VentaViewModel
@{
    ViewData["Title"] = "Detalle de Venta";
}

<h1>Detalle de Venta - @Model.Id</h1>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.ClienteNombre</dd>

        <dt class="col-sm-2">MÃ©todo de pago</dt>
        <dd class="col-sm-10">@Model.MetodoPago</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    </dl>
</div>

<h3>Detalles</h3>
<table class="table table-sm">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Detalles.Count > 0)
    {
        foreach (var d in Model.Detalles)
        {
            <tr>
                <td>@d.ProductoNombre</td>
                <td>@d.Cantidad</td>
                <td>@d.PrecioUnitario.ToString("C")</td>
                <td>@d.Subtotal.ToString("C")</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">No hay detalles</td>
        </tr>
    }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" asp-controller="Ventas" class="btn btn-secondary">Volver</a>
    <a asp-action="DescargarPorDia" asp-controller="Ventas" class="btn btn-primary">Imprimir (PDF)</a>
</div>
