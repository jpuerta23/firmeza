<!-- html -->
@model AdminRazer.ViewModels.VentaViewModel
@{
ViewData["Title"] = "Eliminar Venta";
}

<h1>Eliminar Venta</h1>

<div>
    <h4>Venta #@Model.Id</h4>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.ClienteNombre</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>
    </dl>

    <h5>Detalle</h5>
    <table class="table">
        <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>SubTotal</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var d in Model.Detalles)
        {
        <tr>
            <td>@d.ProductoNombre</td>
            <td>@d.Cantidad</td>
            <td>@(d.PrecioUnitario.ToString("C"))</td>
            <td>@(d.Subtotal.ToString("C"))</td>
        </tr>
        }
        </tbody>
    </table>

    <form asp-controller="Ventas" asp-action="Eliminar" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Confirmar eliminaci√≥n</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
