<!-- html -->
@model IEnumerable<AdminRazer.Models.Venta>
@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-4">
    <a href="/Admin" class="btn btn-outline-secondary btn-back mb-3">
        <i class="bi bi-arrow-left me-2"></i>Volver al Dashboard
    </a>
    <h1 class="page-title">Ventas</h1>
</div>

<div class="content-card mb-4">
    <form asp-controller="Ventas" asp-action="DescargarPorDia" method="get" class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="fecha" class="form-label fw-semibold">Filtrar por día:</label>
            <input type="date" id="fecha" name="fecha" class="form-control" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-file-earmark-pdf me-2"></i>Descargar PDF (día)
            </button>
        </div>
        <div class="col-auto">
            <a asp-controller="Ventas" asp-action="DescargarTodas" class="btn btn-secondary">
                <i class="bi bi-collection me-2"></i>Descargar PDF (todas)
            </a>
        </div>
    </form>
</div>

<div class="content-card">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Total</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td class="fw-semibold">#@v.Id</td>
                        <td>@v.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@v.Cliente.Nombre</td>
                        <td class="text-success fw-semibold">@v.Total.ToString("C")</td>
                        <td class="text-end">
                            <a asp-controller="Ventas" asp-action="Details" asp-route-id="@v.Id" class="btn btn-sm btn-outline-info me-1" title="Ver Detalles">
                                <i class="bi bi-eye me-1"></i>Ver
                            </a>
                            <a asp-controller="Ventas" asp-action="Eliminar" asp-route-id="@v.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>